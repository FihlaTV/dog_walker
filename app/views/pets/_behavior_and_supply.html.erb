  Behavior:
  <div class="field">
  <%= f.fields_for :behavior, Behavior.new do |behavior| %>
    Dog Aggressive? <%= behavior.check_box :dog_aggro? %>
    Human Aggressive? <%= behavior.check_box :human_aggro? %>
    <%= behavior.label :bad_habits %>
    <%= behavior.text_field :bad_habits %>
  <% end %>
  </div>

  Supplies:
  <div class="field">
  <%= f.fields_for :supply, Supply.new do |supply_form| %>
    <%= supply_form.label :supply, "Supply" %>
    <%= supply_form.text_field :supply %>
    <%= supply_form.label :location, "Location" %>
    <%= supply_form.text_field :location %>
  <% end %>
  </div>
  <div class="actions">
    <%= f.hidden_field :household_id, :value => @household.id %>
  </div>

  
<p>
  <strong>Behavior:</strong>
    Dog aggressive?<%= @pet.behavior.dog_aggro %>
    Human aggressive?<%= @pet.behavior.human_aggro %>
    Bad habits: <%= @pet.behavior.bad_habits %>
</p>