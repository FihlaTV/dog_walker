<div class="well">
<p>
Add a poop:
  <%= form_for(@poop) do |f| %>
</p>

    <div class="field">
      <%= f.label :poop_datetime, "Poop Time" %><br>
      <%= f.text_field :poop_datetime %>
      <p>For example: "Today at 3pm" or "Yesterday at 9am"</p>
    </div>

    <div class="field">
      <%= f.label :poop_quality, "Poop Quality" %><br>
      <%= f.select :poop_quality, ["normal", "soft", "very soft", "liquid", "hard", "very hard"], prompt: "Select Quality" %>
    </div>

    <div class="actions">
      <%= f.hidden_field :pet_id, :value => @pet.id %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
</div>
