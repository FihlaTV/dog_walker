<div class="well">
  <h4><%= Time.now.strftime("Today") %></h4>
  <table class="table">
    <tr>
      <th>Time</th>
      <th>Poop Quality</th>
      <th>Remove?</th>
    </tr>
    <% if @poops %>
      <% @poops.each do |poop| %>
        <tr>
          <% if poop.poop_datetime.to_date == Time.now.to_date %>
            <td><%= poop.poop_datetime.strftime("%I:%M %p") %></td>
            <td><%= poop.poop_quality %></td>
            <td class="text-center"><%= link_to 'X', poop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
      <% end %>
</table>

