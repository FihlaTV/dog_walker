<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-5 col-sm-12">
  <div class="well">
    <h2><%= @household.owner_name %></h4>

    <% if @household.owner_id %>
      <p><div class="photo-lg">
        <%= image_tag @household.owner.avatar_url %>
      </div></p>
    <% end %>
    <p>
      <strong>Address:</strong>
      <%= @household.address %>
    </p>

    <p>
      <strong>Key info:</strong>
      <%= @household.key_info %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @household.phone %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @household.email %>
    </p>

    <h4>Pets:</h4>
      <% @household.pets.each do |pet| %>
        <h4><%= link_to pet.name, pet_path(pet) %><h4>
        <p><div class="photo-lg"><%= image_tag pet.avatar_url %></div></p>
        
      <% end %>

      <%= link_to 'Edit', edit_user_household_path %> |
      <%= link_to 'Back', :back %>
  </div>
</div>

  <div class="col-sm-7 col-xs-12">
    <div class="well">
      <h4>Add a new pet to <%= @household.address %>:</h4>
      <%= render 'pets/form' %>
    </div>
  </div>
