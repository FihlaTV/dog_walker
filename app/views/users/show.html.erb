<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-5 col-xs-12">
    <div class="photo-lg"> 
      <%= image_tag @user.avatar_url.to_s %>
    </div>
      <h1><%= @user.name %></h1>
      <p><%= @user.phone %></p>
      <p><%= @user.email %></p>
      <div class="links">
        <%= link_to 'Edit Profile', edit_user_registration_path %> | 
        <%= link_to 'New Household', new_user_household_path(@user) %> | 
        <%= link_to 'Back', :back %>
      </div>
  </div>

  <div class="col-sm-7 col-xs-12">

  <h2>Clients</h2>
    <% @user.households.each do |house| %>
      <h4><%= link_to house.owner_name, user_household_path(@user.id, house) %><small> | <%= link_to 'Edit Household Info', edit_user_household_path(@user.id, house) %> | <%= link_to 'Add New Pet', user_household_path(@user.id, house) %></small></h4> 
      <p><strong>Address:</strong> <%= house.address %></p>
      <p><strong>Pets:</p>
      <ul>
      <% house.pets.each do |pet| %>
        <% if pet.avatar.url.present? %>
          <%= link_to image_tag(pet.avatar_url(:thumb).to_s), pet_path(pet) %>
        <% else %>
          <%= link_to image_tag("thumb_dog_bounty.jpg"), pet_path(pet) %>
        <% end %>
        <p><%= link_to pet.name, pet_path(pet) %> <small>| <%= link_to 'Edit Pet Info', edit_pet_path(pet) %></small></p>
        <br/>
      <% end %>
      </ul>
    <% end %>
  </div>
</div>


