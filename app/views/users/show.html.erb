<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6 col-xs-12">
    <div class="well">
      <div class="photo-lg"> 
        <%= image_tag @user.avatar_url.to_s %>
      </div>
      <h1><%= @user.name %></h1>
      <p><%= @user.phone %></p>
      <p><%= @user.email %></p>
    <% if @user.walker  == false %>
      <p><%= @user.household.address %></p>
    <% end %>
      <div class="links">
        <%= link_to 'Edit Profile', edit_user_registration_path %> | 
        <% if @user.walker == true %>
        <%= link_to 'New Household', new_user_household_path(@user) %> | 
        <% end %>
        <%= link_to 'Back', :back %>
      </div>
    </div>

    <% if @user.walker== true %>
      <%= render "appointments/schedule" %>
    <% end %>
  </div>

  <div class="col-sm-6 col-xs-12">
    <% if @user.walker == true %>
      <div class="well">
        <%= render "clients" %>
      </div>
    <% else %>
      <div class="well">
        <%= render "owner" %>
      </div>
    <% end %>
  </div>
</div>

<% if @user.walker == true %>
  <div class="well">
    <h1>Reviews</h1>
    <%= render "reviews" %>
  </div>
<% end %>
