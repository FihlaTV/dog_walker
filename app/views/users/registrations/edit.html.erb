<div class="col-sm-6 col-xs-12">
<div class="well">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :multipart => true, method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <% if current_user.avatar.url.present? %>
      <div class="photo-lg">
        <%= image_tag(current_user.avatar.url)  %>
      </div>
    <% end %>
    <p><%= f.label "Upload a Photo" %></p>
    <div class="photo-lg">
      <%= f.file_field :avatar %>
    </div>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <br>
  <div><p><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true %></p></div> 

  <div><p><%= f.label :phone %><br />
  <%= f.text_field :phone, autofocus: true, id: "inputPhone", :class => "phone_us" %></p></div> 

  <div><p><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></p></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p></div>
  <% end %>

  <div><p><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %></p></div>

  <div><p><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></p></div>

  <div><p><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %></p></div>

  <div style="margin-top:10px;"><%= f.submit "Update", type: "button", class: "btn btn-primary"  %></div>
<% end %>

<h3>Unhappy?</h3>

<p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, type: "button", class: "btn btn-primary" %></p>

<%= link_to "Back", :back %>
</div>
</div>

