<div class="row" style="margin-left: -35px; margin-top: 35px;">

  <div class="col-xs-12 col-md-5">
    <h1 class="home-header">Dog walker? <span class="subheader1">Cat sitter? </span></h1>
    <h4>Sign in or create a new account to streamline your pet care!</h4>
    <br />
    <p><%= link_to "Sign up", new_registration_path(@user), type: "button", class: "btn-lg btn-primary", style: "color:white; margin-right: 25px" %> 
      <%= link_to "Check Out the Demo", new_user_session_path, type: "button", class: "btn-lg btn-primary", style: "color:white" %><p>
  </div> 

  <div class="col-xs-12 col-md-6 col-md-offset-1"> 
    <p id="notice"><%= notice %></p>

    <h1 class="home-header"><span class="subheader1">Looking for help with your pet?</span></h1> 
    <h4 style="margin-bottom: 25px;">Click below to connect with our amazing pet sitters:</h4>

    <div class="bs-example" data-example-id="simple-carousel">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

          <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
            <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
          </ol>

          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <div class="row">
                <div class="col-md-4 col-xs-offset-1">
                  <p><div class="photo-sm"><%= image_tag @walkers[0].avatar_url(:thumb) %></div></p>
                  <h4><strong><%= @walkers[0].name %></strong></h4>
                  <p><strong>Phone:  </strong><%= @walkers[0].phone %></p>
                  <p><strong>Email:  </strong><%= @walkers[0].email %></p>
                  <button class="btn btn-primary" id="email-modal-button" data-target="#myModal" id="walker" data-id="<%= @walkers[0].id %>">Send email</button> 
                </div>

                <div class="col-md-6">
                  <h4>Reviews:</h4>
                    <ul>
                    <% Review.where(:walker_id => @walkers[0].id).each do |review| %>
                      <li><%= review.content %></li>
                    <% end %>
                    </ul>
                    <br>
                    <p>Click to visit <%= link_to @walkers[0].name, @walkers[0] %>'s profile</p> 
                    <br>              
                </div>
              </div>
            </div>

            <div class="item">
              <div class="row">
                <div class="col-md-4 col-xs-offset-1">
                  <p><div class="photo-sm"><%= image_tag @walkers[1].avatar_url(:thumb) %></div></p>
                  <h4><strong><%= @walkers[1].name %></strong></h4>
                  <p><strong>Phone:  </strong><%= @walkers[1].phone %></p>
                  <p><strong>Email:  </strong><%= @walkers[1].email %></p>
                  <button class="btn btn-primary" id="email-modal-button" data-target="#myModal" id="walker" data-id="<%= @walkers[1].id %>">Send email</button> 
                </div>

                <div class="col-md-6">
                  <h4>Reviews:</h4>
                    <ul>
                    <% Review.where(:walker_id => @walkers[1].id).each do |review| %>
                      <li><%= review.content %></li>
                    <% end %>
                    </ul>
                    <br>
                    <p>Click to visit <%= link_to @walkers[1].name, @walkers[1] %>'s profile</p>               
                </div>
              </div>
            </div>

            <div class="item">
              <div class="row">
                <div class="col-md-4 col-xs-offset-1">
                  <p><div class="photo-sm"><%= image_tag @walkers[2].avatar_url(:thumb) %></div></p>
                  <h4><strong><%= @walkers[2].name %></strong></h4>
                  <p><strong>Phone:  </strong><%= @walkers[2].phone %></p>
                  <p><strong>Email:  </strong><%= @walkers[2].email %></p>
                  <button class="btn btn-primary" id="email-modal-button" data-target="#myModal" id="walker" data-id="<%= @walkers[2].id %>">Send email</button> 
                </div>

                <div class="col-md-6">
                  <h4>Reviews:</h4>
                    <ul>
                    <% Review.where(:walker_id => @walkers[2].id).each do |review| %>
                      <li><%= review.content %></li>
                    <% end %>
                    </ul>
                    <br>
                    <p>Click to visit <%= link_to @walkers[2].name, @walkers[2] %>'s profile</p>               
                </div>
              </div>
            </div>
          </div>

          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>

          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>

        </div>
      </div>

  </div>
</div>



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Get in touch!</h4>
      </div>

      <div class="modal-body">
                
        <%= form_tag("/users/send_email", method: "post") do %>
          <div class="field">
            <p>Please fill out the form below.</p>
          </div>

          <input type="hidden" name="walker_id" id="walker" value=""/>

          <div class="field">
            <%= label_tag :name %><br>
            <%= text_field_tag :name, "Joe Owner" %>
          </div>

          <div class="field">
            <%= label_tag :phone %><br>
            <%= text_field_tag :phone, "555-555-5555" %>
          </div>

          <div class="field">
            <%= label_tag :email %><br>
            <%= text_field_tag :email, "joe@joe.com" %>
          </div>

          <div class="field">
            My pet is a: 
            <select>
              <option value="cat">cat</option>
              <option value="dog">dog</option>
              <option value="other">other</option>
            </select>
          </div>

          <div class="field">
            </strong>Message (optional)</strong><br/>
            <textarea rows="2" cols="50" type="text" name="text" id="text" placeholder="I want to hire you!"></textarea>
          </div>

          <div class="actions" id="send-email">
            <%= submit_tag("Send Email") %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>


