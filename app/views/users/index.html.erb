<div class="row">
  <div class="col-xs-12">
    <p id="notice"><%= notice %></p>
    
    <h1 class="home-header">Dog walker?<span class="subheader1"> Cat sitter? </span><span class="subheader2">Armadillo wrangler?</span></h1>
    <h4>
      <%= link_to "Sign up", new_registration_path(@user), type: "button", class: "btn-lg btn-primary" %> <span class="spaced">or</span> <%= link_to "Check Out the Demo", new_user_session_path, type: "button", class: "btn-lg btn-primary" %>
    </h4>
  </div> 

  <div class="col-md-10 col-xs-12"> 
    <h1 class="home-header" style="padding-top: 15px; margin-bottom: -5px;">Need help with your pet?</h1> 
    <h3>Check out our amazing pet sitters!</h3>

    <div class="bs-generic contact-walker" data-example-id="simple-carousel">
        <div id="carousel-generic" class="carousel slide" data-ride="carousel">

          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <div class="row">
                <div class="col-md-3 col-xs-offset-1">
                  <p><div class="photo-lg"><%= image_tag @walkers[0].avatar_url.to_s %></div></p>
                </div>

                <div class="col-md-6 col-xs-offset-1">
                  <h3><%= link_to @walkers[0].name, @walkers[0] %></h3>
                  <ul>
                    <% Review.where(:walker_id => @walkers[0].id).each do |review| %>
                      <li><%= review.content %></li>
                    <% end %>
                  </ul>
                  <br>
                  <button class="btn btn-primary" id="email-modal-button" data-target="#myModal" id="walker" data-id="<%= @walkers[0].id %>">Send email</button> 
                  <br>
                  <br>              
                </div>
              </div>
            </div>

            <div class="item">
              <div class="row">
                <div class="col-md-3 col-xs-offset-1">
                  <p><div class="photo-lg"><%= image_tag @walkers[1].avatar_url.to_s %></div></p>
                </div>

                <div class="col-md-6 col-xs-offset-1">
                  <h3><%= link_to @walkers[1].name, @walkers[1] %></h3>
                  <ul>
                    <% Review.where(:walker_id => @walkers[1].id).each do |review| %>
                      <li><%= review.content %></li>
                    <% end %>
                  </ul>
                  <br>
                  <button class="btn btn-primary" id="email-modal-button" data-target="#myModal" id="walker" data-id="<%= @walkers[1].id %>">Send email</button> 
                  <br>
                  <br>              
                </div>
              </div>
            </div>

            <div class="item">
              <div class="row">
                <div class="col-md-3 col-xs-offset-1">
                  <p><div class="photo-lg"><%= image_tag @walkers[2].avatar_url.to_s %></div></p>
                </div>

                <div class="col-md-6 col-xs-offset-1">
                  <h3><%= link_to @walkers[2].name, @walkers[2] %></h3>
                  <ul>
                    <% Review.where(:walker_id => @walkers[2].id).each do |review| %>
                      <li><%= review.content %></li>
                    <% end %>
                  </ul>
                  <br>
                  <button class="btn btn-primary" id="email-modal-button" data-target="#myModal" id="walker" data-id="<%= @walkers[2].id %>">Send email</button> 
                  <br>
                  <br>              
                </div>
              </div>
            </div>
          </div>

          <a class="left carousel-control" href="#carousel-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>

          <a class="right carousel-control" href="#carousel-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>

        </div>
      </div>

  </div>
</div>



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Get in touch!</h4>
      </div>

      <div class="modal-body">
                
        <%= form_tag("/users/send_email", method: "post") do %>
          <div class="field">
            <p>Please fill out the form below.</p>
          </div>

          <input type="hidden" name="walker_id" id="walker" value=""/>

          <div class="field">
            <%= label_tag :name %><br>
            <%= text_field_tag :name, "Joe Owner" %>
          </div>

          <div class="field">
            <%= label_tag :phone %><br>
            <%= text_field_tag :phone, "555-555-5555" %>
          </div>

          <div class="field">
            <%= label_tag :email %><br>
            <%= text_field_tag :email, "joe@joe.com" %>
          </div>

          <div class="field">
            My pet is a: 
            <select>
              <option value="cat">cat</option>
              <option value="dog">dog</option>
              <option value="other">other</option>
            </select>
          </div>

          <div class="field">
            </strong>Message (optional)</strong><br/>
            <textarea rows="2" cols="50" type="text" name="text" id="text" placeholder="I want to hire you!"></textarea>
          </div>

          <div class="actions" id="send-email">
            <%= submit_tag("Send Email") %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>


